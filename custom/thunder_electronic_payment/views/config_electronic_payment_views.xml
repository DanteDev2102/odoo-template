<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="config_electronic_payment_view_tree" model="ir.ui.view">
        <field name="name">config.electronic.payment.view.tree</field>
        <field name="model">config.electronic.payment</field>
        <field name="arch" type="xml">
            <tree string="Config electronic Payments">
                <field name="active" />
                <field name="company_id" />
                <field name="invoice_not_fiscal_interval" />
                <field name="invoice_not_fiscal_counter" optional="hidden"/>
                <field name="invoice_fiscal_interval" />
                <field name="invoice_fiscal_counter" optional="hidden"/>
                <field name="not_fiscal_journal" />
                <field name="fiscal_journal" />
                <field name="hour_closed_config" widget="float_time"/>
            </tree>
        </field>
    </record>

    <record id="config_electronic_payment_view_form" model="ir.ui.view">
        <field name="name">config.electronic.payment.view.form</field>
        <field name="model">config.electronic.payment</field>
        <field name="arch" type="xml">
            <form string="Config electronic Payment">
                <sheet>
                    <group>
                        <field name="invoice_not_fiscal_interval" />
                        <field name="invoice_not_fiscal_counter" invisible="1" />
                        <field name="invoice_fiscal_interval" />
                        <field name="invoice_fiscal_counter" invisible="1" />
                        <field name="hour_closed_config" widget="float_time" />
                    </group>
                    <group>
                        <field name="company_id" />
                        <field name="not_fiscal_journal" />
                        <field name="fiscal_journal" />
                        <field name="active" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="config_electronic_payment_action" model="ir.actions.act_window">
        <field name="name">Config Electronic Payment</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
        <field name="res_model">config.electronic.payment</field>
        <field name="target">current</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add a config for electronic payment
            </p>
        </field>
    </record>

    <menuitem
        id="menu_config_electronic_payment"
        name="electronic payment config"
        action="config_electronic_payment_action"
        parent="account.menu_finance_configuration"
        sequence="10"
        groups="thunder_electronic_payment.group_config_electronic_payment"
    />
</odoo>